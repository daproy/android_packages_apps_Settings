<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/temasek_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- App circle bar -->
    <PreferenceScreen
         android:key="app_circle_bar"
         android:fragment="com.android.settings.temasek.AppCircleBar"
         android:title="@string/app_circle_bar_title"/>

    <!-- Heads up notifications -->
    <Preference
         android:key="heads_up_enabled"
         android:fragment="com.android.settings.temasek.HeadsUpSettings"
         android:title="@string/category_heads_up" />

    <!-- Clock widget -->
    <PreferenceScreen
         android:key="lock_clock"
         android:fragment="com.android.settings.temasek.LockClock"
         android:title="@string/lock_clock_title" />

    <!-- Display -->
    <PreferenceScreen
         android:key="display_settings"
         android:fragment="com.android.settings.temasek.DisplaySettings"
         android:title="@string/display_settings_title" />

    <!-- Gesture anywhere -->
    <PreferenceScreen
         android:key="gesture_anywhere"
         android:fragment="com.android.settings.temasek.gestureanywhere.GestureAnywhereSettings"
         android:title="@string/gesture_anywhere_title" />

    <!-- Lockscreen shortcuts -->
    <PreferenceScreen
         android:key="lockscreen_temasek"
         android:fragment="com.android.settings.temasek.LockScreenSettings"
         android:title="@string/temasek_lockscreen_title" />

    <!-- Recent panel settings -->
    <PreferenceScreen
         android:key="recents_panel"
         android:fragment="com.android.settings.temasek.RecentsPanelSettings"
         android:title="@string/recents_panel_title"/>

    <!-- Screen and animations -->
    <PreferenceScreen
         android:key="screen_and_animations"
         android:fragment="com.android.settings.temasek.ScreenAndAnimations"
         android:title="@string/screen_and_animations_title"/>

    <!-- Smart Control -->
    <PreferenceScreen
         android:id="@+id/smartcontrol_settings"
         android:title="@string/smartcontrol_settings_title"
         android:fragment="com.android.settings.temasek.SmartControl"
         android:icon="@drawable/ic_settings_smartcontrol" />

</PreferenceScreen>
